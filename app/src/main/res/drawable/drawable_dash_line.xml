<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-5dp"
        android:left="-5dp"
        android:right="-1dp"
        android:top="0dp">

        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/colorTextGrey1"
                android:dashGap="@dimen/_2sdp"
                android:dashWidth="@dimen/_2sdp" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>