<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <include
        android:id="@+id/routViewHolder"
        layout="@layout/layout_root_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routViewHolder"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rejectDelivery"
            style="@style/CommonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_bg_with_app_border_and_bg"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/str_reject"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/acceptDelivery"
            style="@style/CommonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_background"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/str_accept"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>
